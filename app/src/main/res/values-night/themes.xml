<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.BasicProject3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
<!--        <item name="android:windowNoTitle">true</item>-->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/background_dark_mode</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultTextColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="ProFilePictureBackground">
        <item name="android:background">@color/background_dark_mode</item>
    </style>

    <style name="NormalTextView" parent="DefaultTextColor">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="PageTitle" parent="DefaultTextColor">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>