<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.BasicProject3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
<!--        <item name="android:windowNoTitle">true</item>-->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/background_dark_mode</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark_mode</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_dark_mode</item>
    </style>

    <style name="ViewsBackground">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="SearchBar">
        <item name="android:background">@drawable/custom_rectangle_dark</item>
    </style>

    <style name="DefaultTextColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="ProFilePictureBackground">
        <item name="android:background">@color/background_dark_mode</item>
    </style>

    <style name="NormalTextView" parent="DefaultTextColor">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingHorizontal">@dimen/item_padding</item>
    </style>

    <style name="PageTitle" parent="DefaultTextColor">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoryTextView" parent="DefaultTextColor">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:padding">@dimen/item_padding</item>
    </style>

    <style name="TextWithChevron" parent="NormalTextView">
        <item name="drawableEndCompat">@drawable/ic_chevron_dark</item>
    </style>

    <style name="SignOutText" parent="NormalTextView">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="SplashScreen" parent="Theme.BasicProject3">
        <!-- Override window background drawable -->
        <item name="android:windowBackground">@drawable/splash_dark</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/clouds</item>
    </style>

    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>