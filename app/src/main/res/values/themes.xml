<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.BasicProject3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/electromagnetic</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/clouds</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/clouds</item>
    </style>

    <style name="ViewsBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SearchBar">
        <item name="android:background">@drawable/custom_rectangle_light</item>
    </style>

    <style name="DefaultTextColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blue_night</item>
    </style>

    <style name="ProFilePictureBackground">
        <item name="android:background">@color/silver</item>
    </style>

    <style name="NormalTextView" parent="DefaultTextColor">
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    
    <style name="PageTitle" parent="DefaultTextColor">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextWithChevron" parent="DefaultTextColor">
        <item name="drawableEndCompat">@drawable/ic_chevron_light</item>
    </style>

    <style name="SplashScreen" parent="Theme.BasicProject3">
        <!-- Override window background drawable -->
        <item name="android:windowBackground">@drawable/splash_light</item>
    </style>

</resources>